{
    "name": "shared",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "frontend/libs/shared/src",
    "prefix": "lib",
    "tags": [],
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/angular:package",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "frontend/libs/shared/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "frontend/libs/shared/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "frontend/libs/shared/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "frontend/libs/shared/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "frontend/libs/shared/**/*.ts",
                    "frontend/libs/shared/**/*.html",
                    "frontend/libs/shared/package.json"
                ]
            }
        }
    }
}
