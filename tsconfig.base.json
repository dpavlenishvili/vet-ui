{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@vet/features/registration": ["frontend/libs/features/registration/src/index.ts"],
            "@vet/shared": ["frontend/libs/shared/src/index.ts"],
            "@vet/theming": ["frontend/libs/theming/src/index.ts"],
            "@vet/ui": ["frontend/libs/ui/src/index.ts"],
            "@vet/ui/button": ["frontend/libs/ui/button/src/index.ts"],
            "@vet/ui/card": ["frontend/libs/ui/card/src/index.ts"],
            "@vet/ui/checkbox": ["frontend/libs/ui/checkbox/src/index.ts"],
            "@vet/ui/datepicker": ["frontend/libs/ui/datepicker/src/index.ts"],
            "@vet/ui/dropdown": ["frontend/libs/ui/dropdown/src/index.ts"],
            "@vet/ui/form-item": ["frontend/libs/ui/form-item/src/index.ts"],
            "@vet/ui/input": ["frontend/libs/ui/input/src/index.ts"],
            "@vet/ui/navbar": ["frontend/libs/ui/navbar/src/index.ts"],
            "@vet/ui/radio-button": ["frontend/libs/ui/radio-button/src/index.ts"],
            "@vet/ui/verification": ["frontend/libs/ui/verification/src/index.ts"],
            "@vet/ui/wizard": ["frontend/libs/ui/wizard/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
