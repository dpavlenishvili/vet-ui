{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@vet/backend": ["frontend/libs/backend/src/index.ts"],
            "@vet/dynamic-pages": ["frontend/libs/dynamic-pages/src/index.ts"],
            "@vet/features/authentication": ["frontend/libs/features/authentication/src/index.ts"],
            "@vet/features/home": ["frontend/libs/features/home/src/index.ts"],
            "@vet/features/registration": ["frontend/libs/features/registration/src/index.ts"],
            "@vet/shared": ["frontend/libs/shared/src/index.ts"],
            "@vet/shared/constants": ["frontend/libs/shared/constants/src/index.ts"],
            "@vet/shared/forms": ["frontend/libs/shared/forms/src/index.ts"],
            "@vet/shared/interfaces": ["frontend/libs/shared/interfaces/src/index.ts"],
            "@vet/theming": ["frontend/libs/theming/src/index.ts"],
            "@vet/ui/button": ["frontend/libs/ui/button/index.ts"],
            "@vet/ui/card": ["frontend/libs/ui/card/index.ts"],
            "@vet/ui/checkbox": ["frontend/libs/ui/checkbox/index.ts"],
            "@vet/ui/datepicker": ["frontend/libs/ui/datepicker/index.ts"],
            "@vet/ui/dropdown": ["frontend/libs/ui/dropdown/index.ts"],
            "@vet/ui/form-item": ["frontend/libs/ui/form-item/index.ts"],
            "@vet/ui/input": ["frontend/libs/ui/input/index.ts"],
            "@vet/ui/message-card": ["frontend/libs/ui/message-card/index.ts"],
            "@vet/ui/modals": ["frontend/libs/ui/modals/index.ts"],
            "@vet/ui/navbar": ["frontend/libs/ui/navbar/index.ts"],
            "@vet/ui/navbar-menu": ["frontend/libs/ui/navbar-menu/index.ts"],
            "@vet/ui/radio-button": ["frontend/libs/ui/radio-button/index.ts"],
            "@vet/ui/slider": ["frontend/libs/ui/slider/index.ts"],
            "@vet/ui/verification": ["frontend/libs/ui/verification/index.ts"],
            "@vet/ui/wizard": ["frontend/libs/ui/wizard/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
