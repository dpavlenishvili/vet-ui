{
    "private": true,
    "name": "vet-workspace",
    "scripts": {
        "serve": "npx nx run vet:serve",
        "build": "npx nx run vet:build",
        "prepare": "husky install",
        "commit": "git-cz",
        "postinstall": "husky install",
        "dev:ssr": "nx run vet:serve-ssr",
        "serve:ssr": "node dist/frontend/apps/vet/server/main.js",
        "build:ssr": "nx build && nx run vet:server",
        "prerender": "nx run vet:prerender"
    },
    "packageManager": "yarn@3.6.4",
    "engines": {
        "node": ">=18.0.0",
        "yarn": ">=4.0.2",
        "npm": "please use yarn"
    },
    "dependencies": {
        "@angular/animations": "17.0.6",
        "@angular/cdk": "17.0.3",
        "@angular/common": "17.0.6",
        "@angular/compiler": "17.0.6",
        "@angular/core": "17.0.6",
        "@angular/forms": "17.0.6",
        "@angular/platform-browser": "17.0.6",
        "@angular/platform-browser-dynamic": "17.0.6",
        "@angular/platform-server": "17.0.6",
        "@angular/router": "17.0.6",
        "@angular/ssr": "^17.0.6",
        "@ng-select/ng-select": "^12.0.6",
        "@ng-web-apis/common": "^3.0.5",
        "@ng-web-apis/universal": "^3.0.6",
        "@ngneat/transloco": "^6.0.0",
        "@popperjs/core": "^2.11.8",
        "angular-svg-icon": "^17.0.0",
        "bootstrap": "^5.3.2",
        "express": "^4.18.2",
        "ngx-bootstrap": "^12.0.0",
        "prettier": "^3.0.3",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "0.14.2"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "17.0.6",
        "@angular-devkit/core": "17.0.6",
        "@angular-devkit/schematics": "17.0.6",
        "@angular-eslint/eslint-plugin": "17.0.1",
        "@angular-eslint/eslint-plugin-template": "17.0.1",
        "@angular-eslint/template-parser": "17.0.1",
        "@angular/cli": "~17.0.0",
        "@angular/compiler-cli": "17.0.6",
        "@angular/language-service": "17.0.6",
        "@commitlint/cli": "^17.8.0",
        "@commitlint/config-conventional": "^17.8.0",
        "@commitlint/cz-commitlint": "^17.8.0",
        "@nx/angular": "17.2.0",
        "@nx/devkit": "17.2.0",
        "@nx/eslint": "17.2.0",
        "@nx/eslint-plugin": "17.2.0",
        "@nx/jest": "17.2.0",
        "@nx/js": "17.2.0",
        "@nx/playwright": "17.2.0",
        "@playwright/test": "^1.36.0",
        "@schematics/angular": "17.0.6",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.4.0",
        "@types/node": "18.16.9",
        "@typescript-eslint/eslint-plugin": "6.14.0",
        "@typescript-eslint/parser": "6.14.0",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "8.48.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-playwright": "^0.15.3",
        "husky": "^8.0.3",
        "inquirer": "8",
        "jest": "^29.4.1",
        "jest-environment-jsdom": "^29.4.1",
        "jest-preset-angular": "13.1.4",
        "jsonc-eslint-parser": "^2.1.0",
        "lint-staged": "^15.0.1",
        "ng-packagr": "17.0.2",
        "nx": "17.2.0",
        "postcss": "^8.4.5",
        "postcss-import": "~14.1.0",
        "postcss-preset-env": "~7.5.0",
        "postcss-url": "~10.1.3",
        "ts-jest": "^29.1.0",
        "ts-node": "10.9.1",
        "typescript": "5.2.2"
    },
    "nx": {
        "targets": {}
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "lint-staged": {
        "**/*{js,json,css,scss,md,ts,html}": [
            "prettier --write",
            "eslint"
        ],
        "*.php": "php ./vendor/bin/php-cs-fixer fix --config php-cs-fixer"
    },
    "workspaces": [
        "frontend/libs/theming"
    ]
}
