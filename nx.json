{
    "affected": {
        "defaultBase": "master"
    },
    "generators": {
        "@nx/angular:application": {
            "style": "scss",
            "linter": "eslint",
            "unitTestRunner": "jest",
            "e2eTestRunner": "playwright"
        },
        "@nx/angular:library": {
            "linter": "eslint",
            "unitTestRunner": "jest"
        },
        "@nx/angular:component": {
            "style": "scss"
        }
    },
    "targetDefaults": {
        "lint": {
            "inputs": [
                "default",
                "{workspaceRoot}/.eslintrc.json",
                "{workspaceRoot}/.eslintignore",
                "{workspaceRoot}/eslint.config.js"
            ]
        },
        "build": {
            "cache": true
        },
        "@nx/jest:jest": {
            "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"],
            "cache": true,
            "options": {
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "workspaceLayout": {
        "projectNameAndRootFormat": "derived",
        "appsDir": "frontend/apps",
        "libsDir": "frontend/libs"
    },
    "defaultProject": "frontend"
}
